import { Button, VerticalBox, HorizontalBox, CheckBox, LineEdit } from "std-widgets.slint";

export component AppWindow inherits Window {
    in property <string> pass: "";

    callback request-generate-password();
    callback request-set-password-settings(string, bool, bool, bool);

    title: "password generator";
    
    VerticalBox {
        HorizontalBox {
            VerticalBox {
                HorizontalBox {
                    Text {
                        text: "Length:";
                    }
                    len := LineEdit {
                        text: 16;
                        input-type: InputType.number;
                    }
                }
                HorizontalBox {
                    Text {
                        text: "Uppercase:";
                    }
                    upper := CheckBox {}
                }
                HorizontalBox {
                    Text {
                        text: "Numbers:";
                    }
                    num := CheckBox {}
                }
                HorizontalBox {
                    Text {
                        text: "Symbols:";
                    }
                    symbols := CheckBox {}
                }
            }

            Button {
                text: "Set";
                clicked => {
                    root.request-set-password-settings(len.text, upper.checked, num.checked, symbols.checked);
                }
            }
        }

        Text {
            text: "Password: \{root.pass}";
        }

        Button {
            text: "Generate";
            clicked => {
                root.request-generate-password();
            }
        }
    }
}
